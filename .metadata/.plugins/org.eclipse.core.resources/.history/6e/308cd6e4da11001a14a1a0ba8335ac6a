		 * pos=sc.nextInt();
		 * System.out.println("Enter the element you want to insert: "); int
		 * x=sc.nextInt();
		 * 
		 * for(i=(n-1);i>=(pos-1);i--) { a[i+1]=a[i]; } a[pos-1]=x;
		 * System.out.print("After inserting:"); for(i=0;i<n;i++) {
		 * System.out.print(a[i]+" "); } System.out.println(a[n]+" ");
