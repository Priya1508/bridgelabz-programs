package basics;

public class Pattern3 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int j=1,i;
		for(i=1;i<=5;i++) {
			if(i%2!=0) {
				for(int k=1;k<=j;k++) {
					if(k%2!=0) {
						System.out.print("*");
					}
					else {
						System.out.print(" ");
					}
				}
			}
			else {
				for(int k=1;k<=j;k++) {
					if(k%2==0) {
						System.out.print("*");
					}
					else {
						System.out.print(" ");
					}
				}
			}
		}
		if(i<5/2+1) {
			++j;
		}
		else {
			--j;
		}
		System.out.println();

	}

}
