package basics;

import java.util.Scanner;

public class Insertatgivenindex {

	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		  int i; Scanner sc=new Scanner(System.in);
		  System.out.println("Enter the number of elements in array: "); 
		  int n=sc.nextInt();
		  String str[]= {"b","d","s","r"};
		 	  
		/*
		 * int a[]=new int[n+1]; System.out.println("Enter the elements in array: ");
		 * for(i=0;i<n;i++) { a[i]=sc.nextInt(); } System.out.print(a[i]+" ");
		 * 
		 */		  System.out.println("Insert the position you want to insert: "); 
		  int pos=sc.nextInt();
		  System.out.println("Enter the element you want to insert: "); 
		  String x=sc.next();
		  
		  for(i=str.length-1;i>=(pos-1);i--)
		  {
			  str[i+1]=str[i];
			}
		  str[pos-1]=x;
		  System.out.print("After inserting:");
		  for(i=0;i<n;i++)
		  {
		  System.out.print(str[i]+" ");
		  }
		  System.out.println(str[n]+" ");
		 
		
		}

	}
	

