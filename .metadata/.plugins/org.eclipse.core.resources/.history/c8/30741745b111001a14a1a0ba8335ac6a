		int i;
		System.out.println("Enter the elements in array: ");
		for(i=0;i<arr.length;i++)
		{
			int n=sc.nextInt();
		}
		System.out.print(arr[i]+" ");
		
		System.out.println("Insert the index position: ");
		int pos=sc.nextInt();
		System.out.println("Enter the element: ");
		int e=sc.nextInt();
		
			for(int j=a-1;j<=pos-1;j--) {
			if(pos==arr[i]) {
